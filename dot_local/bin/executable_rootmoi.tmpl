#!/usr/bin/env fish
# rootmoi - chezmoi wrapper for managing root-owned files

# 定义 root 的 chezmoi 配置路径
# 注意：现在 root 目录与你的用户配置是平行的
set ROOT_SOURCE_DIR "{{ .chezmoi.sourceDir }}/root"
set ROOT_DEST_DIR "/"

# 转发所有参数给 chezmoi，但使用 root 的配置
exec sudo chezmoi \
  --source $ROOT_SOURCE_DIR \
  --destination $ROOT_DEST_DIR \
  $argv

